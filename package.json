{
  "name": "errorexplainer",
  "displayName": "ErrorExplainer",
  "description": "AI-powered error explanation extension that helps developers understand and fix errors in their code.",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other",
    "Programming Languages"
  ],
  "activationEvents": [
    "onLanguage:*"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "errorExplainer.explainError",
        "title": "Explain Error",
        "category": "ErrorExplainer"
      }
    ],
    "configuration": {
      "title": "ErrorExplainer",
      "properties": {
        "errorExplainer.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API Key for error explanations",
          "scope": "application",
          "sensitive": true
        },
        "errorExplainer.modelName": {
          "type": "string",
          "default": "gpt-3.5-turbo",
          "enum": [
            "gpt-3.5-turbo",
            "gpt-4"
          ],
          "description": "OpenAI model to use for error explanations"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile && npm run compile-tests",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "node --loader ts-node/esm ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.25.3",
    "eslint": "^9.25.1",
    "glob": "^8.1.0",
    "mocha": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@vscode/webview-ui-toolkit": "^1.4.0",
    "langchain": "0.0.189",
    "openai": "^4.18.0"
  }
}
